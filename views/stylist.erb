<div class='panel panel-info'>
  <div class="panel-heading">
    <h3 class="panel-title" style='height: 40px;'>
      <a href="/">
        <button class='btn btn-primary' style='float: left; margin-right: 10px;'>
          <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        </button>
      </a>
      <form action="/update/stylist/<%=@stylist.id%>" method="post" style='float: left;'>
        <input type="hidden" name="_method" value="patch">
        Stylist:
        <input name ='name' type='text' value='<%= @stylist.name %>' style='color: black;'/>
        <button tyep='submit' class='btn btn-warning'>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button></a>
      </form>
      <form action="/delete/stylist/<%=@stylist.id%>" method="post" style='float: right;'>
        <input type="hidden" name="_method" value="delete">
        <button type='submit' class='btn btn-danger'>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
      </form>
    </h3>
  </div>
  <div class="panel-body">
    <form action="/new/client/<%=@stylist.id%>" method="post">
      Client:
      <input id='name' name='name' type = 'text' />
      <button class='btn btn-success' type="submit">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
    </form>

    <% if @clients.any?() %>
      <ul class='list-unstyled'>
        <% @clients.each do |client| %>
          <li><a href="/clients/<%= client.id() %>"><%= client.name() %></a></li>
        <% end %>
      </ul>
    <% else %>
      <h3>None</h3>
    <% end %>

  </div>
</div>
