<div class='panel panel-info'>
  <div class="panel-heading">
    <h3 class="panel-title text-center">
      Stylists
      <!-- <a href='/new/stylist'>
        <button class='btn-success btn' style='float: right;'>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
      </a> -->
    </h3>
  </div>
  <div class="panel-body">
    <form action="/new/stylist" method="post">
      Name:
      <input id='name' name='name' type = 'text' />
      <button class='btn btn-success' type="submit">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
    </form>
    <% if @stylists.any?() %>
      <ul class='list-unstyled'>
        <% @stylists.each do |stylist| %>
          <li><a href="/stylists/<%= stylist.id() %>"><%= stylist.name() %></a></li>
        <% end %>
      </ul>
    <% else %>
      <h3>None</h3>
    <% end %>
  </div>
</div>

<div class='panel panel-info'>
  <div class="panel-heading">
    <h3 class="panel-title text-center">Clients</h3>
  </div>
  <div class="panel-body">
    <% if @clients.any?() %>
      <ul class='list-unstyled'>
        <% @clients.each do |client| %>
          <li><a href="/clients/<%= client.id() %>"><%= client.name() %></a></li>
        <% end %>
      </ul>
    <% else %>
      <h3>None</h3>
    <% end %>
  </div>
</div>
